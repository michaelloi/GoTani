<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOut"
    android:background="@color/light">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="10dp"
        android:layout_above="@+id/buttonPesan">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textPembelian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembelian"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textSize="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPembelian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPembelian"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerPembelian"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="Alamat Pengantaran"
                android:textSize="16dp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_below="@+id/textAlamat">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/judulAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Judul Alamat"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Penerima "
                            android:textSize="11dp"
                            android:layout_weight="0.6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:textSize="11dp"/>
                        <TextView
                            android:id="@+id/namaPenerima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Roby Pasaribu"
                            android:textSize="11dp"
                            android:layout_weight="0.4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No.Hp Penerima "
                            android:textSize="11dp"
                            android:layout_weight="0.6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:textSize="11dp"/>
                        <TextView
                            android:id="@+id/nohpPenerima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="081208120821"
                            android:textSize="11dp"
                            android:layout_weight="0.4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat Penerima "
                            android:textSize="11dp"
                            android:layout_weight="0.6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : "
                            android:textSize="11dp"/>
                        <TextView
                            android:id="@+id/alamatPenerima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jalan jalan ke ibu kota hahahahhahahhaha hahhahahahhahahahhaha"
                            android:textSize="11dp"
                            android:layout_weight="0.4"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textBiaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewAlamat"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="Total yang Harus di Bayar"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewBiaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_below="@+id/textBiaya">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Belanja + Ongkir "
                                android:textSize="9dp"
                                android:textStyle="bold"
                                android:maxLines="1"/>
                            <TextView
                                android:id="@+id/ongkir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(Rp 10.000 x 2)"
                                android:textSize="9dp"
                                android:textStyle="bold"
                                android:maxLines="1"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/totalHarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 0"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:maxLines="1"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textMetodePembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewBiaya"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="Metode Pembayaran"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewMetode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@+id/textMetodePembayaran">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transfer ke "
                                android:textSize="9dp"
                                android:textStyle="bold"
                                android:maxLines="1"/>
                            <TextView
                                android:id="@+id/namaRekening"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BANK BRI A.N. ROBY D. PASARIBU"
                                android:textSize="9dp"
                                android:textStyle="bold"
                                android:maxLines="1"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/noRekening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0621649301"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:maxLines="1"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttonPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/biru"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUAT PESANAN"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>