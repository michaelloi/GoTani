<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AturProdukPenjualan"
    android:background="@color/abuabu_terang">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/biru"
       android:padding="8dp">

      <ImageView
          android:id="@+id/arrow_back"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:src="@drawable/ic_arrow_back" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/arrow_back"
          android:orientation="vertical">

         <TextView
             android:id="@+id/atur_produk_penjualan"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/atur_produk_penjualan"
             android:textColor="@color/white"
             android:textSize="20dp"
             android:textStyle="bold">

         </TextView>

      </LinearLayout>

   </RelativeLayout>

   <TextView
       android:id="@+id/kategori_produk"
       android:layout_width="160dp"
       android:layout_height="20dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="85dp"
       android:text="Kategori Produk :"
       android:textColor="@color/black"
       android:textSize="15dp" />

   <RelativeLayout
       android:id="@+id/atur_produk_penjualan_kategori"
       android:layout_width="180dp"
       android:layout_height="40dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="120dp"
       android:background="@drawable/rounded_rectangle_white">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:text="@string/atur_produk_penjualan_kategori"
          android:textSize="18dp"
          android:textStyle="bold" />

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="145dp"
          android:layout_marginLeft="145dp"
          android:layout_marginTop="145dp"
          android:layout_marginEnd="145dp"
          android:layout_marginRight="145dp"
          android:layout_marginBottom="145dp"
          android:src="@drawable/ic_down_arrow" />

   </RelativeLayout>

   <TextView
       android:layout_width="180dp"
       android:layout_height="20dp"
       android:layout_marginLeft="50dp"
       android:layout_marginTop="85dp"
       android:layout_toRightOf="@+id/kategori_produk"
       android:text="Urutkan Berdasarkan :"
       android:textColor="@color/black"
       android:textSize="15dp" />

   <RelativeLayout
       android:layout_width="180dp"
       android:layout_height="40dp"
       android:layout_marginLeft="30dp"
       android:layout_marginTop="120dp"
       android:layout_toRightOf="@id/atur_produk_penjualan_kategori"
       android:background="@drawable/rounded_rectangle_white">

      <TextView
          android:id="@+id/atur_produk_penjualan_huruf"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:text="@string/atur_produk_penjualan_huruf"
          android:textSize="18dp"
          android:textStyle="bold" />

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="145dp"
          android:layout_marginLeft="145dp"
          android:layout_marginTop="145dp"
          android:layout_marginEnd="145dp"
          android:layout_marginRight="145dp"
          android:layout_marginBottom="145dp"
          android:src="@drawable/ic_down_arrow" />

   </RelativeLayout>

   <RelativeLayout
       android:layout_width="390dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="180dp"
       android:background="@drawable/rounded_rectangle_white">

      <ImageView
          android:id="@+id/pisang_cavendish"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:src="@drawable/ic_market" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/pisang_cavendish"
          android:orientation="vertical">

         <TextView
             android:id="@+id/atur_produk_penjualan_pisang"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/atur_produk_penjualan_pisang"
             android:textSize="20dp"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/atur_produk_penjualan_harga_pisang"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/atur_produk_penjualan_harga_pisang"
             android:textSize="15dp">

         </TextView>

      </LinearLayout>

   </RelativeLayout>

   <RelativeLayout
       android:layout_width="390dp"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="300dp"
       android:background="@drawable/rounded_rectangle_white">

      <ImageView
          android:id="@+id/apel"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginStart="10dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:src="@drawable/ic_market"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@id/apel"
          android:orientation="vertical">

         <TextView
             android:id="@+id/atur_produk_penjualan_apel"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/atur_produk_penjualan_apel"
             android:textSize="20dp"
             android:textStyle="bold"/>

         <TextView
             android:id="@+id/atur_produk_penjualan_harga_apel"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/atur_produk_penjualan_harga_apel"
             android:textSize="15dp">

         </TextView>

      </LinearLayout>

   </RelativeLayout>

</RelativeLayout>